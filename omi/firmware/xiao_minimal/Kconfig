source "Kconfig.zephyr"

menu "Attune XIAO minimal options"

config OMI_CODEC_OPUS
    bool "Enable Opus codec"
    default y

config OMI_ENABLE_OFFLINE_STORAGE
    bool "Enable offline storage"
    select DISK_ACCESS
    select FILE_SYSTEM
    select FAT_FILESYSTEM_ELM
    select FS_FATFS_MOUNT_MKFS
    help
        Enable offline SD-card storage support.
    default n

config OMI_ENABLE_ACCELEROMETER
    bool "Enable accelerometer"
    help
        Enable accelerometer support.
    default n

config OMI_ENABLE_BUTTON
    bool "Enable button support"
    help
        Enable button handling.
    default y

config OMI_ENABLE_SPEAKER
    bool "Enable speaker support"
    help
        Enable speaker output support.
    default n

config OMI_ENABLE_BATTERY
    bool "Enable battery support"
    help
        Enable battery telemetry support.
    default y

if OMI_ENABLE_BATTERY

config OMI_BATTERY_GPIO_CHARGE_SPEED_PIN
    int "Battery charge-speed GPIO pin"
    default 13
    help
        GPIO pin index used for charger current selection.

config OMI_BATTERY_GPIO_CHARGING_ENABLE_PIN
    int "Battery charging-enable GPIO pin"
    default 17
    help
        GPIO pin index used to enable the charger path.

config OMI_BATTERY_GPIO_READ_ENABLE_PIN
    int "Battery read-enable GPIO pin"
    default 14
    help
        GPIO pin index used to enable battery voltage read circuitry.

config OMI_BATTERY_CHARGE_SPEED_ACTIVE_LOW
    bool "Charge-speed pin is active low"
    default y

config OMI_BATTERY_CHARGING_ENABLE_ACTIVE_LOW
    bool "Charging-enable pin is active low"
    default y

config OMI_BATTERY_READ_ENABLE_ACTIVE_LOW
    bool "Read-enable pin is active low"
    default y

config OMI_BATTERY_ADC_R1_KOHM
    int "Battery divider R1 value (kOhm)"
    default 1037
    help
        Top resistor value for battery divider calibration.

config OMI_BATTERY_ADC_R2_KOHM
    int "Battery divider R2 value (kOhm)"
    default 510
    help
        Bottom resistor value for battery divider calibration.

endif

config OMI_ENABLE_USB
    bool "Enable USB support"
    help
        Enable USB power-check support.
    default y

config OMI_ENABLE_HAPTIC
    bool "Enable haptic support"
    help
        Enable haptic feedback support.
    default n

endmenu
